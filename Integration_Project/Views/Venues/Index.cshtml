@model IEnumerable<Integration_Project.Models.Venue>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Venues</h2>

@if (User.IsInRole("Standard"))
{
    <p>
        <a asp-action="Create">Add New</a>
    </p>
}
else
{
    <p>
        Please <a asp-area="Identity" asp-page="/Account/Login">login</a> to add a venue!
    </p>
}

@{ 
    for(int i = 0; i < Model.Count(); i+=3)
    {
    <div class="row">
        @{
            for (int j = 0; j <= 2; j++)
            {
                @if (i + j == Model.Count()) { break; }
                <div class="col-sm-4">

                    @Html.Partial("_VenueSummary", Model.ElementAt(i + j))
                </div>
            }
        }
    </div>
    }
}
