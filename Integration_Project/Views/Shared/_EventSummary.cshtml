@model Integration_Project.Models.Event


        @{
            var imgSrc = "Hello";
            if (Model.EventPicture != null)
            {
                var base64 = Convert.ToBase64String(Model.EventPicture);
                imgSrc = String.Format("data:image/gif;base64,{0}", base64);
            }
            else
            {
                imgSrc = "https://images.pexels.com/photos/534031/pexels-photo-534031.jpeg";
            }

        }


<style>
    .Cont {
        background-size: contain;
        background-size: cover;
        height: 200px;
        width: 100%;
        padding: 0;
        margin: 0;
        background-repeat: no-repeat;
    }

    .h3 {
        font-weight: bolder;
    }

    .row {
        margin-left: auto;
        margin-right: auto;
    }

    .bot {
        position: absolute;
        bottom: 0;
    }
    .background-image {
        -webkit-filter: brightness(100%);
    }

        .background-image:hover {
            -webkit-filter: brightness(50%);
            -webkit-transition: all 1s ease;
            -moz-transition: all 1s ease;
            -o-transition: all 1s ease;
            transition: all 1s ease;
        }
</style>

<div class="Cont container background-image" style="background-image:url(@imgSrc)" onclick="location.href='@Url.Action("Details","Events", new { id = Model.Id})'">
    <div class="row" style="text-align:left">
        <div class="col-sm-12">
            <h3 style="color:white">

                @{
                    if (Model.Name == null)
                    {
                        @:ThisVenueHasNoName
                    }
                    else
                    {
                        @:@Model.Name
                    }
                }
            </h3>

        </div>
      
        <div class="row">
            <div class="col-sm-12">
                <p style="color:white">@Model.Description</p>
            </div>
        </div>

    </div>

</div>