@model IEnumerable<Integration_Project.Models.EventViewModel>

@{
    ViewData["Title"] = "My Events";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-6">
                <h3 class="panel-title">@ViewData["Title"]</h3>
            </div>

        </div>
    </div>

    <table class="table">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div class="row">
                        <div class="col-md-8">
                            @Html.DisplayFor(modelItem => item.Event.Name)
                        </div>
                        <div class="col-md-4">
                            <button type="button" class="btn btn-default btn-xs">Organizer</button>
                        </div>
                    </div>

                    @Html.DisplayFor(modelItem => item.Event.StartDate) - @Html.DisplayFor(modelItem => item.Event.EndDate)
                </td>
            </tr>
        }
    </table>
</div>
