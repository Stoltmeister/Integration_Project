@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/mapview.png" alt="MapView" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h3 class="indexcaption"><b>&nbsp;&nbsp;&nbsp;Find Amazing Events Near You!</b></h3>
            </div>
        </div>
        <div class="item">
            <img src="~/images/insidetechevent.png" alt="TechEventPicture" class="img-responsive" id="conference-pic" />
            <div class="carousel-caption" role="option">
                <h3 class="indexcaption"><b>Promote Your Venue With Events!</b></h3>
            </div>
        </div>
        <div class="item">
            <img src="~/images/homevolleyball.png" alt="Home Volleyball Event" class="img-responsive" id="volleyball-pic" />
            <div class="carousel-caption" role="option">
                <h3 class="indexcaption"><b>Make It An Event!</b></h3>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Getting Started</h2>
        <ol>
            <li>First <a asp-area="Identity" asp-page="/Account/Register">Create Your Account</a> </li>
            <li>Select interests you enjoy.</li>
            <li>Find events and venues near you.</li>
            <li>Create your own amazing event!</li>
        </ol>

    </div>
    <div class="col-md-4">
        <h2>Business Friendly</h2>
        <ul>
            <li>Engage with your community by hosting an event</li>
            <li>Promote your event and reach new customers</li>
            <li>Make your venue the place to be</li>
        </ul>
    </div>
    <div class="col-md-4">
        <h2>Features</h2>
        <ol>
            <li>Find nearby events based on your interests or create your own.</li>
            <li>Get weather updates for outdoor events.</li>
            <li>Message all event participants.</li>
            <li>Promote your event and be the first event people see.</li>
        </ol>
    </div>

</div>
